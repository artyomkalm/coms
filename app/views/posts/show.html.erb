<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= scancode @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments (<%= @post.comment_threads.count %>) </h2>

<hr>
  <%= render partial: 'comments/new', object: @comment, as: 'comment' if can? :create, Comment %><hr>
  <div id="comments"><%= render partial: 'comments/comment', collection: @comments, as: :comment, locals: { post_id: @post.id} %></div>